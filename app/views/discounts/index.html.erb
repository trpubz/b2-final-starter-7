<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>

  <p><%= link_to "Create New Discount", new_merchant_discount_path(@merchant) %></p>

  <table class="table">
    <% @merchant.bulk_discounts.each do |discount| %>
      <tr id="discount-<%= discount.id %>">
        <td class="td"><%= link_to "Discount ##{discount.id}", merchant_discount_path(@merchant, discount) %></td>
        <td class="td"><%= discount.discount.to_discount_format %></td>
        <td class="td">Min Qty: <%= discount.min_qty %></td>
        <td class="td"><%= button_to "Delete", merchant_discount_path(@merchant, discount), method: :delete %></td>
      </tr>
    <% end %>
  </table>

  <div class="row">
    <p class='col-12'>Upcoming Holidays</p>
  </div>

  <div class="upcoming-holidays">
    <% @next_holidays.each do | holiday | %>
        <p><%= "#{holiday.local_name} | #{holiday.date}" %></p>
    <% end %>
  </div>
</body>
